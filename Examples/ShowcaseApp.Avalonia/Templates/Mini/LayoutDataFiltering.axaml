<Styles xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:controls="clr-namespace:Westermo.GraphX.Controls.Controls;assembly=Westermo.GraphX.Controls.Avalonia">
    <Style Selector="controls|VertexControl">
        <Setter Property="Foreground" Value="{DynamicResource ButtonText}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:VertexControl}">
                    <Grid>
                        <Border BorderThickness="1" BorderBrush="{TemplateBinding Foreground}"
                                Background="Blue"
                                CornerRadius="45" Width="50" Height="50" Name="border">
                            <ContentPresenter Content="Binding ID" VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Styles>
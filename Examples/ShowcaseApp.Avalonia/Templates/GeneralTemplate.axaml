<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:exampleModels="clr-namespace:ShowcaseApp.Avalonia.ExampleModels"
        xmlns:models="clr-namespace:ShowcaseApp.Avalonia.Models"
        xmlns:controls="clr-namespace:Westermo.GraphX.Controls.Controls;assembly=Westermo.GraphX.Controls.Avalonia"
        xmlns:behaviours="clr-namespace:Westermo.GraphX.Controls.Behaviours;assembly=Westermo.GraphX.Controls.Avalonia">

    <!--  VERTEX CONTROL  -->
    <Style Selector="controls|VertexControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="VertexShape" Value="Circle" />
        <Setter Property="ShowLabel" Value="False" />
        <!--  VERTEX DRAGGING CONTROL  -->
        <Setter Property="behaviours:DragBehaviour.IsDragEnabled" Value="True" />
        <Setter Property="behaviours:DragBehaviour.UpdateEdgesOnMove" Value="True" />
    </Style>

    <!--  Selected vertex style - provides visual feedback for selection  -->
    <Style Selector="controls|VertexControl[IsSelected=True]">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="DodgerBlue" BlurRadius="8" OffsetX="0" OffsetY="0" />
            </Setter.Value>
        </Setter>
    </Style>


    <!--  EDGE CONTROL  -->
    <Style Selector="controls|EdgeControl">
        <Setter Property="SelfLoopIndicatorOffset" Value="10,10" />
        <Setter Property="SelfLoopIndicatorRadius" Value="30" />
        <Setter Property="Foreground" Value="DarkRed" />
    </Style>
</Styles>
<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:controls="clr-namespace:Westermo.GraphX.Controls.Controls;assembly=Westermo.GraphX.Controls.Avalonia"
    xmlns:behaviours="clr-namespace:Westermo.GraphX.Controls.Behaviours;assembly=Westermo.GraphX.Controls.Avalonia"
    xmlns:vertexLabels="clr-namespace:Westermo.GraphX.Controls.Controls.VertexLabels;assembly=Westermo.GraphX.Controls.Avalonia">

    <!-- VERTEX CONTROL -->
    <Style Selector="controls|VertexControl">
        <!-- Set background color through attached property -->
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ShowLabel" Value="True" />
        <!-- VERTEX DRAGGING CONTROL -->
        <Setter Property="behaviours:DragBehaviour.IsDragEnabled"
                Value="False" />
        <Setter Property="behaviours:DragBehaviour.UpdateEdgesOnMove"
                Value="True" />
    </Style>

    <!-- Selected vertex style - provides visual feedback for selection -->
    <Style Selector="controls|VertexControl[IsSelected=True]">
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="DodgerBlue" BlurRadius="10" OffsetX="0" OffsetY="0" />
            </Setter.Value>
        </Setter>
    </Style>


    <Style Selector="vertexLabels|AttachableVertexLabelControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="LabelPositionMode" Value="Sides" />
        <Setter Property="LabelPositionSide" Value="Bottom" />
    </Style>

    <!-- EDGE CONTROL -->
    <Style Selector="controls|EdgeControl">
        <Setter Property="MinWidth"
                Value="1" />
        <Setter Property="MinHeight"
                Value="1" />
        <Setter Property="Background"
                Value="Red" />
        <Setter Property="Foreground"
                Value="Blue" />
        <Setter Property="Opacity"
                Value="1" />
    </Style>

</Styles>
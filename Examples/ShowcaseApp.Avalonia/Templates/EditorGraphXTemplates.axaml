<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Westermo.GraphX.Controls.Avalonia;assembly=Westermo.GraphX.Controls.Avalonia"
    xmlns:exampleModels="clr-namespace:ShowcaseApp.Avalonia.ExampleModels">

    <!-- VERTEX CONTROL -->
    <Style Selector="avalonia|VertexControl">
        <!-- Set background color through attached property -->
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ShowLabel" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type avalonia:VertexControl}" x:DataType="exampleModels:DataVertex">
                    <Grid>
                        <Border CornerRadius="50" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" Name="hlBorder">
                            <Image Source="{Binding ImageId, Converter={StaticResource EditorImageConverter}}"
                                   Width="45"
                                   Stretch="Uniform" Margin="2" />
                        </Border>

                        <!--<controls:VertexLabelControl x:Name="PART_vertexLabel" Content="{Binding Vertex.Text, RelativeSource={RelativeSource TemplatedParent}}" LabelPositionSide="Bottom" FontFamily="Comic Sans MS" />-->

                    </Grid>
                </ControlTemplate>
            </Setter.Value>

        </Setter>

        <!-- VERTEX DRAGGING CONTROL -->
        <Setter Property="avalonia:DragBehaviour.IsDragEnabled"
                Value="False" />
        <Setter Property="avalonia:DragBehaviour.UpdateEdgesOnMove"
                Value="True" />


        <Style Selector="^[(avalonia|HighlightBehaviour.Highlighted)=True]">
            <Setter Property="BorderBrush" Value="Gold" />
            <Setter Property="BorderThickness" Value="3" />
        </Style>

    </Style>


    <Style Selector="avalonia|AttachableVertexLabelControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="LabelPositionMode" Value="Sides" />
        <Setter Property="LabelPositionSide" Value="Bottom" />

        <!-- Custom label template body -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="avalonia:AttachableVertexLabelControl"
                                 x:DataType="avalonia:AttachableVertexLabelControl">
                    <Grid>
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Text="{Binding AttachNode.Vertex, UpdateSourceTrigger=PropertyChanged}"
                                   FontFamily="Comic Sans MS" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- EDGE CONTROL -->
    <Style Selector="avalonia|EdgeControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type avalonia:EdgeControl}">
                    <Grid>
                        <Path Stroke="{StaticResource EdgeBrush}"
                              StrokeThickness="2" MinWidth="1" MinHeight="1"
                              x:Name="PART_edgePath" />
                        <avalonia:DefaultEdgePointer NeedRotation="true" x:Name="PART_EdgePointerForTarget">
                            <Path Data="M0,0.5 L1,1 1,0" Fill="Black" Stretch="Uniform" Width="15" Height="15" />
                        </avalonia:DefaultEdgePointer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="MinWidth"
                Value="1" />
        <Setter Property="MinHeight"
                Value="1" />
        <Setter Property="Background"
                Value="Red" />
        <Setter Property="Foreground"
                Value="Silver" />
        <Setter Property="Opacity"
                Value="1" />

        <Setter Property="avalonia:HighlightBehaviour.IsHighlightEnabled" Value="False" />


        <Style Selector="^[(avalonia|HighlightBehaviour.IsHighlightEnabled)=True]">
            <Setter Property="Foreground" Value="Gold" />
            <Setter Property="StrokeThickness" Value="5" />
        </Style>
        <Style Selector="^[(avalonia|HighlightBehaviour.IsHighlightEnabled)=False]">

            <Setter Property="Foreground" Value="Silver" />
            <Setter Property="StrokeThickness" Value="2" />
        </Style>
    </Style>

</Styles>
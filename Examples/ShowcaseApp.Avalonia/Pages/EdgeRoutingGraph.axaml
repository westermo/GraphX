<UserControl x:Class="ShowcaseApp.Avalonia.Pages.EdgeRoutingGraph"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonia="clr-namespace:Westermo.GraphX.Controls.Avalonia;assembly=Westermo.GraphX.Controls.Avalonia"
             xmlns:exampleModels="clr-namespace:ShowcaseApp.Avalonia.ExampleModels"
             xmlns:pages1="clr-namespace:ShowcaseApp.Avalonia.Pages"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             x:DataType="pages1:EdgeRoutingGraph">
    
    <UserControl.Styles>
        <StyleInclude Source="/Templates/ERGraphXTemplates.axaml" />
    </UserControl.Styles>
    
    <UserControl.DataTemplates>
        <DataTemplate DataType="exampleModels:DataVertex">
            <Image
                Source="{Binding ImageId, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ImageConverter}}"
                Margin="0" Width="40" Stretch="UniformToFill" />
        </DataTemplate>
    </UserControl.DataTemplates>
    
    <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,*">

        <GridSplitter VerticalAlignment="Stretch" Width="2" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" />

        <Border Grid.Row="0" Grid.Column="0" CornerRadius="2" BorderBrush="{DynamicResource ButtonBorder}"
                Background="{DynamicResource ButtonBackground}" Margin="2" BorderThickness="1">
            <TextBlock Margin="1" TextWrapping="Wrap" TextAlignment="Center"
                       Text="Here is an example of the edges routing and handling. You can preview different edge routing and compiling algorithms along with applied visual styles and drag vertices to see routed path changes." />
        </Border>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="{DynamicResource ButtonBorder}" BorderThickness="1"
                Margin="2">
            <avalonia:ZoomControl x:Name="erg_zoomctrl" Margin="-5,0,5,0">
                <exampleModels:GraphAreaExample x:Name="erg_Area" />
            </avalonia:ZoomControl>
        </Border>

        <DockPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
                <Button Height="50" Margin="3" Name="erg_but_randomgraph" DockPanel.Dock="Top" UseLayoutRounding="True"
                        BorderBrush="{DynamicResource ModernButtonBorder}">
                    <Image Width="44" Source="/Assets/dice.png" Stretch="Uniform" />
                </Button>
                <Button Height="50" Margin="3" Name="erg_but_relayout" DockPanel.Dock="Top" UseLayoutRounding="True"
                        BorderBrush="{DynamicResource ModernButtonBorder}">
                    <Path Width="34.8333" Height="41.1667" Stretch="Fill" Fill="{DynamicResource ButtonText}"
                          Data="F1 M 38,20.5833C 42.9908,20.5833 47.4912,22.6825 50.6667,26.046L 50.6667,17.4167L 55.4166,22.1667L 55.4167,34.8333L 42.75,34.8333L 38,30.0833L 46.8512,30.0833C 44.6768,27.6539 41.517,26.125 38,26.125C 31.9785,26.125 27.0037,30.6068 26.2296,36.4167L 20.6543,36.4167C 21.4543,27.5397 28.9148,20.5833 38,20.5833 Z M 38,49.875C 44.0215,49.875 48.9963,45.3932 49.7703,39.5833L 55.3457,39.5833C 54.5457,48.4603 47.0852,55.4167 38,55.4167C 33.0092,55.4167 28.5088,53.3175 25.3333,49.954L 25.3333,58.5833L 20.5833,53.8333L 20.5833,41.1667L 33.25,41.1667L 38,45.9167L 29.1487,45.9167C 31.3231,48.3461 34.483,49.875 38,49.875 Z " />
                </Button>
            </StackPanel>
            <ScrollViewer DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                <ItemsControl>
                    <Expander IsExpanded="True" Header="Edge routing algorithm">
                        <DockPanel LastChildFill="False">
                            <ComboBox Name="erg_eralgo" Margin="3" DockPanel.Dock="Top" />
                            <CheckBox Name="erg_useExternalERAlgo" DockPanel.Dock="Top" Margin="3"
                                      Content="Use external algorithm" />
                            <CheckBox Name="erg_useCurves" Margin="3" Content="Use curving technique"
                                      DockPanel.Dock="Top" />
                            <CheckBox Name="erg_recalculate" Margin="3" Content="Update paths on drag"
                                      DockPanel.Dock="Top" />

                            <DockPanel LastChildFill="False" Name="erg_prmsbox">
                                <TextBlock Text="Parameters" TextAlignment="Center" DockPanel.Dock="Top" />
                                <DockPanel LastChildFill="False" DockPanel.Dock="Top" Name="pfer_prms_dp"
                                           IsVisible="False">
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Horizontal grid step:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding PfErParameters.HorizontalGridSize}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Smaller the value more points will be available." />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Vertical grid step:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding PfErParameters.VerticalGridSize}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Smaller the value more points will be available." />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Side grid offset:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding PfErParameters.SideGridOffset}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Additional space around graph from each side that is available for edge routes." />
                                    <CheckBox Margin="3" IsChecked="{Binding PfErParameters.UseDiagonals}"
                                              DockPanel.Dock="Top" Content="Use diagonals"
                                              ToolTip.Tip="Use diagonals in route paths" />
                                    <CheckBox Margin="3" IsChecked="{Binding PfErParameters.UseHeavyDiagonals}"
                                              DockPanel.Dock="Top" Content="Use heavy diagonals"
                                              ToolTip.Tip="Prefer using diagonals in route path" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Pathfinder formula:" DockPanel.Dock="Top" />
                                    <ComboBox Name="erg_pfprm_formula" Margin="3"
                                              DockPanel.Dock="Top"
                                              SelectedItem="{Binding PfErParameters.PathFinderAlgorithm}" />
                                    <CheckBox Margin="3" IsChecked="{Binding PfErParameters.PunishChangeDirection}"
                                              DockPanel.Dock="Top" Content="Punish change direction"
                                              ToolTip.Tip="Don't prefer direction change results in more directed paths" />
                                    <CheckBox Margin="3" IsChecked="{Binding PfErParameters.UseTieBreaker}"
                                              DockPanel.Dock="Top" Content="Use tie breaker"
                                              ToolTip.Tip="Use tie breaking formula" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Heuristics level:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding PfErParameters.Heuristic}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Search tries limit:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding PfErParameters.SearchTriesLimit}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Maximum number of tries available to find correct path" />
                                </DockPanel>
                                <DockPanel LastChildFill="False" DockPanel.Dock="Top" Name="simpleer_prms_dp"
                                           IsVisible="False">
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Side step:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding SimpleErParameters.SideStep}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Back step:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding SimpleErParameters.BackStep}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top" />
                                </DockPanel>
                                <DockPanel LastChildFill="False" DockPanel.Dock="Top" Name="bundleer_prms_dp"
                                           IsVisible="False">
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Subdivision points:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding BundleEdgeRoutingParameters.SubdivisionPoints}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="More points - smoother the edge path" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Iterations:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding BundleEdgeRoutingParameters.Iterations}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="More iterations - tighter the edge routing channels" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Spring constant:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding BundleEdgeRoutingParameters.SpringConstant}"
                                             TextInput="erg_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Lower the value - more bended the edges" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Threshold [0.0 - 1.0]:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding BundleEdgeRoutingParameters.Threshold}"
                                             TextInput="erg_to1_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Edges that have coefficient lower than the threshold between them are not considered for interaction" />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Repulsion coeff [-1.0 - 0.0]:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3"
                                             Text="{Binding BundleEdgeRoutingParameters.RepulsionCoefficient}"
                                             TextInput="erg_tominus1_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="If repulseOpposite is true, this determines how much will opposite edges repulse eachother." />
                                    <Label Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Content="Straightening [0.0 - 1.0]:" DockPanel.Dock="Top" />
                                    <TextBox Margin="3" Text="{Binding BundleEdgeRoutingParameters.Straightening}"
                                             TextInput="erg_to1_PreviewTextInput" DockPanel.Dock="Top"
                                             ToolTip.Tip="Amount of straightening that will be applied after every bundling" />
                                    <CheckBox Margin="3"
                                              IsChecked="{Binding BundleEdgeRoutingParameters.RepulseOpposite}"
                                              DockPanel.Dock="Top" Content="Repulse opposite" />
                                    <CheckBox Margin="3"
                                              IsChecked="{Binding BundleEdgeRoutingParameters.UseThreading, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              DockPanel.Dock="Top" Content="Use threading"
                                              ToolTip.Tip="Value indicating whether opposite edges should attracts or repulse each other" />
                                </DockPanel>
                            </DockPanel>
                        </DockPanel>
                    </Expander>
                    <Expander Header="Edges styling">
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="Edge dash style:" HorizontalAlignment="Center" DockPanel.Dock="Top" />
                            <ComboBox Name="erg_dashstyle" Margin="3" DockPanel.Dock="Top" />
                            <Button Margin="3" Content="Randomize edge styles!" Name="erg_randomizeAll"
                                    DockPanel.Dock="Top" />
                            <Button Margin="3" Content="Randomize edge arrows!" Name="erg_randomizeArrows"
                                    DockPanel.Dock="Top" />
                        </DockPanel>
                    </Expander>
                    <Expander Header="Common settings">
                        <DockPanel LastChildFill="False">
                            <CheckBox Margin="3" Content="Show edge arrows" Name="erg_showEdgeArrows"
                                      DockPanel.Dock="Top" />
                            <CheckBox Margin="3" Content="Show edge labels" Name="erg_showEdgeLabels"
                                      DockPanel.Dock="Top" />
                            <CheckBox Margin="3" Content="Align edge labels" x:Name="erg_alignEdgeLabels"
                                      DockPanel.Dock="Top" />
                            <CheckBox Margin="3" Content="Enable parallel edges" x:Name="erg_enableParallelEdges"
                                      DockPanel.Dock="Top"
                                      ToolTip.Tip="Enables special edges rendering between same vertices (edges drawn separated by custom interval)" />
                        </DockPanel>
                    </Expander>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>